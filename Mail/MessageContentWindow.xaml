<Window x:Class="Mail.MessageContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр сообщения" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Отправитель:" FontWeight="Bold"/>
            <TextBlock x:Name="SenderTextBlock" Margin="0,5,0,10"/>

            <TextBlock Text="Получатель:" FontWeight="Bold"/>
            <TextBlock x:Name="RecipientTextBlock" Margin="0,5,0,10"/>

            <TextBlock Text="Тема:" FontWeight="Bold"/>
            <TextBlock x:Name="SubjectTextBlock" Margin="0,5,0,10"/>

            <TextBlock Text="Содержимое:" FontWeight="Bold"/>
            <TextBlock x:Name="ContentTextBlock" TextWrapping="Wrap"/>
        </StackPanel>

        <Button x:Name="ReplyButton" Content="Ответить" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="ReplyButton_Click"/>
    </Grid>
</Window>