<Window x:Class="Mail.ComposeMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compose Message" Height="400" Width="600">
    <Grid>
        <!-- Элементы управления для ввода данных о сообщении -->
        <Label Content="Получатель:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="RecipientTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="120,20,0,0"/>

        <Label Content="Тема:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="SubjectTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="120,60,0,0"/>

        <Label Content="Содержание:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <TextBox x:Name="ContentTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="200" Margin="20,120,0,0" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Кнопка для отправки сообщения -->
        <Button Content="Отправить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="20,330,0,0" Click="SendButton_Click"/>
    </Grid>
</Window>
